<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>FWRPServlet</servlet-name>
        <servlet-class>controller.FWRPServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClaimDonationServlet</servlet-name>
        <servlet-class>controller.ClaimDonationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFoodItemServlet</servlet-name>
        <servlet-class>controller.AddFoodItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInventorServlet</servlet-name>
        <servlet-class>controller.UpdateInventorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyFoodItemServlet</servlet-name>
        <servlet-class>controller.BuyFoodItemServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>GetNewlyAddedItemsServlet</servlet-name>
        <servlet-class>controller.GetNewlyAddedItemsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateSubscriptionServlet</servlet-name>
        <servlet-class>controller.UpdateSubscriptionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateFavoriteServlet</servlet-name>
        <servlet-class>controller.UpdateFavoriteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FWRPServlet</servlet-name>
        <url-pattern>/FWRPServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClaimDonationServlet</servlet-name>
        <url-pattern>/ClaimDonationServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddFoodItemServlet</servlet-name>
        <url-pattern>/AddFoodItemServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UpdateInventorServlet</servlet-name>
        <url-pattern>/UpdateInventorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyFoodItemServlet</servlet-name>
        <url-pattern>/BuyFoodItemServlet</url-pattern>
    </servlet-mapping>

    
    <servlet-mapping>
        <servlet-name>GetNewlyAddedItemsServlet</servlet-name>
        <url-pattern>/GetNewlyAddedItemsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateSubscriptionServlet</servlet-name>
        <url-pattern>/UpdateSubscriptionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateFavoriteServlet</servlet-name>
        <url-pattern>/UpdateFavoriteServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>